<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context="${packageName}.${activityClass}" xmlns:app="http://schemas.android.com/apk/res/com.time.oim">

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dip"
    	android:background="#ffffff"
    	android:gravity="center_vertical"
        android:id="@+id/toplayout">
       	<ImageButton 
	   	    android:id="@+id/ibt_back"
	   	    android:layout_width="40dip"
	   	    android:layout_height="40dip"
	   	    android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
	   	    android:layout_alignParentTop="true"
	   	    android:layout_alignParentLeft="true"/>
       	<TextView 
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_centerInParent="true"
       	    android:text="添加好友"
       	    android:textSize="24dip"
       	    android:textColor="#34AADC"
       	    />
       	 <ImageButton 
	   	    android:id="@+id/ibt_share"
	   	    android:layout_width="30dip"
	   	    android:layout_height="30dip"
	   	    android:background="@drawable/share_blue"
	   	    android:layout_margin="5dip"
	   	    android:layout_alignParentTop="true"
	   	    android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
	        android:layout_below="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#b2b2b2" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etlayout"
        android:background="#ffffff"
        android:padding="5dip"
        android:layout_below="@+id/toplayout"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip">
    <com.time.oim.view.searchEditText 
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:background="@drawable/noborder_edittext"
        android:hint="请输入好友的用户名"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textSize="20dip"
        android:textColorHint="#e6e6e6"
        
       />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rl_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:layout_below="@+id/etlayout">
	     <com.time.oim.view.PagerSlidingTabStrip
	        android:id="@+id/tabs"
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        app:pstsUnderlineHeight="1dip"
	        app:pstsIndicatorHeight="2dip"
	        app:pstsIndicatorColor="#34AADC"
	        android:layout_marginBottom="10dip"
        	android:background="#ffffff"
	        />
	
	    <android.support.v4.view.ViewPager
	        android:id="@+id/pager"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tabs" />
	</RelativeLayout>
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etlayout"
        android:background="#ffffff">
	<ListView 
	    android:id="@+id/lv_search_result"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
    	android:background="#ffffff"
    	android:scrollbars="none"
        android:visibility="gone" />
	</RelativeLayout>
</RelativeLayout>
