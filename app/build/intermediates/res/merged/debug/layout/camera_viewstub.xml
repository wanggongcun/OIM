<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout  
	        android:id="@+id/okLayout"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"
	        android:padding="10dip"
	        android:visibility="gone"
	        >  
	        <ImageView 
	            android:id="@+id/textImg"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        <ImageButton   
	            android:id="@+id/bt_cancle"  
	            android:layout_width="40dip"  
	            android:layout_height="40dip" 
	            android:layout_alignParentLeft="true"  
	            android:layout_alignParentTop="true" 
		   	    android:layout_margin="@dimen/camera_margin"
	            android:background="@drawable/ic_clear_black_48dp"
	            android:text="删除" 
	            /> 
	            
	          <ImageButton   
	            android:id="@+id/bt_save"  
	            android:layout_width="40dip"  
	            android:layout_height="40dip" 
	            android:layout_alignParentLeft="true"  
	            android:layout_alignParentBottom="true"  
		   	    android:layout_margin="@dimen/camera_margin"
	            android:background="@drawable/ic_file_download_black_48dp"
	            /> 
	          <ImageButton   
	            android:id="@+id/bt_oktext"  
	            android:layout_width="38dip"  
	            android:layout_height="38dip"  
	            android:layout_alignParentTop="true"  
	            android:layout_toLeftOf="@+id/bt_draw"  
		   	    android:layout_margin="@dimen/camera_margin"
	            android:background="@drawable/ic_spellcheck_black_48dp"
	            android:visibility="gone"
	            />
	         <ImageButton   
	            android:id="@+id/bt_doback"  
	            android:layout_width="38dip"  
	            android:layout_height="38dip" 
	            android:layout_toLeftOf="@+id/bt_draw" 
	            android:layout_alignParentTop="true" 
		   	    android:layout_margin="@dimen/camera_margin"
	            android:background="@drawable/ic_reply_all_black_48dp" 
	             />
	         
	          <ImageView   
	            android:id="@+id/bt_draw"  
	            android:layout_width="38dip"  
	            android:layout_height="38dip" 
	            android:layout_alignParentRight="true"  
	            android:layout_alignParentTop="true" 
		   	    android:layout_margin="@dimen/camera_margin"
	            android:src="@drawable/ic_create_black_48dp"
	            
	            /> 
	        <ImageButton   
	            android:id="@+id/bt_ok"  
	            android:layout_width="38dip"  
	            android:layout_height="38dip" 
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentRight="true"  
		   	    android:layout_margin="@dimen/camera_margin"
	            android:background="@drawable/ic_keyboard_arrow_right_black_48dp"
	            />  
	        
	       <ImageButton   
	            android:id="@+id/bt_share"  
	            android:layout_width="38dip"  
	            android:layout_height="38dip" 
	            android:layout_alignParentBottom="true"
	            android:layout_toLeftOf="@+id/bt_ok" 
		   	    android:layout_margin="@dimen/camera_margin"
	            android:background="@drawable/share_128"
	            />  
	            
	         
	    </RelativeLayout> 
	    
		

</RelativeLayout>
