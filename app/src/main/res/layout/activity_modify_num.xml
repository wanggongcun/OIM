<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:padding="2dip"
        android:background="@color/background_white"
        android:gravity="center_vertical"
        android:id="@+id/toplayout">
       	<ImageButton 
	   	    android:id="@+id/ibt_back"
	   	    android:layout_width="40dip"
	   	    android:layout_height="40dip"
	   	    android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
	   	    android:layout_centerVertical="true"
	   	    android:layout_alignParentLeft="true"/>
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_title"
           android:text="修改手机号"
           android:textSize="24dip"
           android:textColor="@color/button_blue"
           android:layout_centerInParent="true"/>
    </RelativeLayout>
     <View
	        android:layout_below="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/top_line" />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_below="@+id/toplayout"
         android:id="@+id/ll_name"
         android:layout_marginTop="15dip"
         >
         
        
         <EditText 
             android:id="@+id/et_name"
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:background="@drawable/noborder_edittext"
           	 android:textSize="20dip"
           	 android:hint="请输入姓名"
           	 android:textColorHint="@color/background_gray"
           	 android:paddingRight="15dip"
           	 android:paddingLeft="15dip"
           	 android:paddingTop="10dip"
           	 android:paddingBottom="10dip"
             android:layout_marginBottom="20dip"/>
         <Button 
             android:id="@+id/bt_modify_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dip"
             android:layout_marginRight="15dip"
             android:background="#ff0000"
             android:textColor="#ffffff"
             android:textStyle="bold"
             android:text="确认"/>
     </LinearLayout>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_below="@+id/toplayout"
         android:id="@+id/ll_phone"
         android:layout_marginTop="15dip"
         >
         
        
         <EditText 
             android:id="@+id/et_phonenum"
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:background="@drawable/noborder_edittext"
           	 android:textSize="20dip"
           	 android:hint="请输入新号码"
           	 android:textColorHint="@color/background_gray"
           	 android:paddingRight="15dip"
           	 android:paddingLeft="15dip"
           	 android:paddingTop="10dip"
           	 android:paddingBottom="10dip"
             android:layout_marginBottom="20dip"/>
         <Button 
             android:id="@+id/bt_modify_phone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dip"
             android:layout_marginRight="15dip"
             android:background="#ff0000"
             android:textColor="#ffffff"
             android:textStyle="bold"
             android:text="确认"/>
     </LinearLayout>
     <LinearLayout 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:id="@+id/ll_birthday"
	      android:layout_below="@+id/toplayout"
	      android:layout_marginTop="15dip"
          android:visibility="gone"
	      >
       <DatePicker 
	        android:id="@+id/dp_birthday"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:calendarViewShown="false"
           	 android:paddingRight="15dip"
           	 android:paddingLeft="15dip"
           	 android:paddingTop="10dip"
           	 android:paddingBottom="10dip"
             android:layout_marginBottom="20dip"/>
	      
     	<Button 
             android:id="@+id/bt_modify_birthday"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dip"
             android:layout_marginRight="15dip"
             android:background="#ff0000"
             android:textColor="#ffffff"
             android:textStyle="bold"
             android:text="确认"/>
     </LinearLayout>
     <LinearLayout 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:id="@+id/ll_email"
	      android:layout_below="@+id/toplayout"
	      android:layout_marginTop="15dip"
          android:visibility="gone"
	      >
	      
	      <EditText 
	          android:id="@+id/et_email"
	          android:layout_height="wrap_content"
	          android:layout_width="match_parent"
        	  android:textSize="20dip"
        	  android:hint="请输入新邮箱"
        	  android:inputType="textEmailAddress"
           	 android:textColorHint="@color/background_gray"
           	 android:paddingRight="15dip"
           	 android:paddingLeft="15dip"
           	 android:paddingTop="10dip"
           	 android:paddingBottom="10dip"
             android:background="@drawable/noborder_edittext"
             android:layout_marginBottom="20dip"
	          />
     	<Button 
             android:id="@+id/bt_modify_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dip"
             android:layout_marginRight="15dip"
             android:background="#ff0000"
             android:textColor="#ffffff"
             android:textStyle="bold"
             android:text="确认"/>
     </LinearLayout>
    

</RelativeLayout>
