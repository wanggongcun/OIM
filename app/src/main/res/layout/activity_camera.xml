<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >
    
    
	<FrameLayout 
	    android:id="@+id/frameLayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@+id/toplayout"
	    android:background="#000000"
	    >
	    
	    <SurfaceView   
	        android:id="@+id/surfaceView"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
	        /> 
	     
	     <com.time.oim.view.MyImageView 
	        android:id="@+id/dragImageView"  
	        android:layout_width="match_parent"  
	        android:layout_height="match_parent"
	        android:scaleType="fitCenter"
	        android:visibility="gone"/>
	     <com.time.oim.view.MyVideoView
	        android:id="@+id/myVideoView"  
	        android:layout_width="match_parent"  
	        android:layout_height="match_parent"
	        android:clickable="true"
	        android:scaleType="fitXY"
	        android:visibility="gone"/>
	   
		<FrameLayout 
		    android:id="@+id/textLayout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    
		    >
			<com.time.oim.view.MyTextView 
	          android:id="@+id/tv_text"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_gravity="center"
	          android:maxLines="1"
	          android:textSize="40dip"
	          android:editable="true"
	          />
	 	</FrameLayout>
	    
	    
	    <RelativeLayout 
	        android:id="@+id/cameralayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:padding="10dip"
	          >
		   	<ImageButton 
		   	    android:id="@+id/bt_frontsnap"
		   	    android:layout_width="40dip"
		   	    android:layout_height="40dip"
		   	    android:background="@drawable/ic_cached_black_48dp"
		   	    android:text="前"
		   	    android:layout_margin="@dimen/camera_margin"
		   	    android:layout_alignParentTop="true"
		   	    android:layout_alignParentRight="true"/>
		   	<ImageButton 
		   	    android:id="@+id/bt_setting"
		   	    android:layout_width="40dip"
		   	    android:layout_height="40dip"
		   	    android:background="@drawable/ic_logo_shadow"
		   	    android:text="前"
		   	    android:layout_margin="@dimen/camera_margin"
		   	    android:layout_alignParentTop="true"
		   	    android:layout_centerHorizontal="true"/>
		   	<ImageButton
		   	    android:id="@+id/bt_flash"
		   	    android:layout_width="40dip"
		   	    android:layout_height="40dip"
		   	    android:background="@drawable/ic_flash_off_black_48dp"
		   	    android:text="闪光"
		   	    android:layout_margin="@dimen/camera_margin"
		   	    android:layout_alignParentTop="true"
		   	    android:layout_alignParentLeft="true"/>
		   	<RelativeLayout 
		   	    android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:layout_alignParentBottom="true">
		   	    <ImageButton
			   	    android:id="@+id/bt_friendlist"
			   	    android:layout_width="40dip"
			   	    android:layout_height="40dip"
			   	    android:background="@drawable/ic_crop_square_black_48dp"
			   	    android:text="好友"
		   	    	android:layout_margin="@dimen/camera_margin"
			   	    android:layout_centerVertical="true"
			   	    android:layout_alignParentLeft="true"
			   	    android:visibility="gone"/>
		        <ImageButton
		            android:id="@+id/ibt_takephoto"
			   	    android:layout_width="90dip"
			   	    android:layout_height="90dip"
		            android:background="@drawable/video"
		            android:layout_centerHorizontal="true"
		            />
		        <ImageButton 
			   	    android:id="@+id/bt_friendstory"
			   	    android:layout_width="40dip"
			   	    android:layout_height="40dip"
			   	    android:background="@drawable/ic_crop_square_black_48dp"
		   	    	android:layout_margin="@dimen/camera_margin"
		   	    	android:layout_alignBottom="@+id/ibt_takephoto"
			   	    android:layout_alignParentRight="true"/>
		   	</RelativeLayout>
		   	
	    </RelativeLayout>
		
	    <ViewStub 
	        android:id="@+id/ok_stub"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
	        android:layout_centerInParent="true"  
	        android:inflatedId="@+id/ok_view_id_after_inflate"  
	        android:layout="@layout/camera_viewstub"/>
	    <RelativeLayout  
		        android:id="@+id/colorLayout"  
		        android:layout_width="wrap_content"  
		        android:layout_height="wrap_content"
		        android:layout_above="@+id/bt_draw"
		        android:layout_below="@+id/bt_save"
		        android:layout_marginTop="100dip"
		        android:layout_marginBottom="80dip"
		        android:visibility="gone"
		        >
	        	<RelativeLayout  
			        android:id="@+id/colorLayout2"  
			        android:layout_width="30dip"  
			        android:layout_height="wrap_content"
			        android:paddingLeft="10dip"
			        android:paddingRight="10dip"
			        android:layout_alignParentRight="true"
			        android:gravity="right"
			        >
				   	<com.time.oim.view.ColorPickerView 
				   	    android:id="@+id/colorPickerView"
				   	    android:layout_height="wrap_content"
				   	    android:layout_width="10dip"
				        android:layout_alignParentRight="true"
				        android:padding="15dip"
				        android:background="@drawable/border_round"
				   	    />
			     </RelativeLayout>
		     </RelativeLayout>
	</FrameLayout>
	 <FrameLayout 
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:id="@+id/fl_text"
	    android:layout_above="@+id/toplayout"
	    android:background="#99000000" 
	     android:visibility="gone">
	     <EditText
		    android:background="#FFFFFF" 
		    android:id="@+id/et_text"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:lines="1"
		    android:maxEms="10"
		    android:textColor="#000000"
		    android:textSize="40sp"
		    android:imeOptions="actionDone"
		    />
	 </FrameLayout>
	 
	 <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01BC74"
        android:layout_alignParentBottom="true"
        android:id="@+id/toplayout">
       	
       	
    </RelativeLayout>
</RelativeLayout>
