<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:padding="2dip"
        android:id="@+id/toplayout">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="设置"
       	    android:textColor="#34AADC"
           android:textSize="28dip"
            
           android:layout_centerInParent="true"/>
    </RelativeLayout>
     <View
	        android:layout_below="@+id/toplayout"
	        android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#c8c8c8" />
     <ScrollView      
	    android:layout_width="fill_parent"    
	    android:layout_height="fill_parent" 
        android:layout_below="@+id/line"   
	    android:scrollbars="vertical"    
	    android:fadingEdge="vertical">  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    	android:background="#e6e6e6"
    	android:scrollbars="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_item_padding"
            android:layout_marginBottom="@dimen/setting_item_padding"
            android:background="#ffffff"
            >
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="账号 "
	            android:padding="5dip"
	            android:textSize="18dip"
	             
	            android:layout_centerVertical="true"
	            android:layout_margin="@dimen/setting_item_padding"/>
           <TextView 
	            android:id="@+id/tv_account"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:textSize="16dip"
	            android:layout_margin="@dimen/setting_item_padding"
	            android:text="我的账户"/>
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
	        android:layout_marginBottom="@dimen/setting_item_padding"
	        android:background="#ffffff"
            >
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
	            	android:padding="5dip"
		            android:layout_margin="@dimen/setting_item_padding"
		            android:textSize="18dip"
		             
		            android:text="姓名 "/>
	            <TextView 
		            android:id="@+id/tv_myname"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:gravity="center"
	            	android:drawableRight="@drawable/ic_gointo_blue_small"
	            	android:textSize="16dip"
		            android:layout_margin="@dimen/setting_item_padding"
		            android:text="图知"/>
	        </RelativeLayout>
	        <View  
		        android:layout_width="fill_parent"  
		        android:layout_height="1dip"  
		        android:background="#c8c8cd" 
		        android:layout_marginLeft="@dimen/setting_item_padding"
		         />
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
	            	android:padding="5dip"
		            android:layout_margin="@dimen/setting_item_padding"
		            android:textSize="18dip"
		             
		            android:text="手机 "/>
	            <TextView 
		            android:id="@+id/tv_myphone"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:gravity="center"
	            	android:drawableRight="@drawable/ic_gointo_blue_small"
	            	android:textSize="16dip"
		            android:layout_margin="@dimen/setting_item_padding"
		            android:text="12345678901 >"/>
	        </RelativeLayout>
	        <View  
		        android:layout_width="fill_parent"  
		        android:layout_height="1dip"  
		        android:background="#c8c8cd" 
		        android:layout_marginLeft="@dimen/setting_item_padding"
		         />
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
	            	android:padding="5dip"
		            android:layout_margin="@dimen/setting_item_padding"
		            android:textSize="18dip"
		             
		            android:text="生日"/>
	            <TextView 
		            android:id="@+id/tv_birthday"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:gravity="center"
	            	android:drawableRight="@drawable/ic_gointo_blue_small"
	            	android:textSize="16dip"
		            android:layout_margin="@dimen/setting_item_padding"
		            android:text="生日"/>
	        </RelativeLayout>
	        <View  
		        android:layout_width="fill_parent"  
		        android:layout_height="1dip"  
		        android:background="#c8c8cd" 
		        android:layout_marginLeft="@dimen/setting_item_padding"
		          />
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
	            	android:padding="5dip"
		            android:layout_margin="@dimen/setting_item_padding"
		            android:textSize="18dip"
		             
		            android:text="邮箱"/>
	            <TextView 
		            android:id="@+id/tv_email"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:gravity="center"
	            	android:drawableRight="@drawable/ic_gointo_blue_small"
	            	android:textSize="16dip"
		            android:layout_margin="@dimen/setting_item_padding"
		            android:text="邮箱"/>
	        </RelativeLayout>
       </LinearLayout>
       <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
	        android:layout_marginBottom="@dimen/setting_item_padding"
            >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
            	android:padding="5dip"
	            android:layout_margin="@dimen/setting_item_padding"
	            android:textSize="18dip"
	             
	            android:text="消息通知"/>
            <Switch 
                android:id="@+id/sw_notify"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="@dimen/setting_item_padding"/>
            
        </RelativeLayout>
         <View  
	        android:layout_width="fill_parent"  
	        android:layout_height="1dip"  
	        android:background="#c8c8cd" 
	        android:layout_marginLeft="@dimen/setting_item_padding"
	        />
         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
            	android:padding="5dip"
	            android:layout_margin="@dimen/setting_item_padding"
	            android:textSize="18dip"
	             
	            android:text="密码修改"/>
            <ImageView 
		            android:id="@+id/iv_password"
		            android:layout_width="40dip"
		            android:layout_height="40dip"
				    android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:padding="10dip"
		            android:layout_marginRight="10dip"
		            android:src="@drawable/ic_gointo_blue_small"
		            />
        </RelativeLayout>
         <View  
	        android:layout_width="fill_parent"  
	        android:layout_height="1dip"  
	        android:background="#c8c8cd" 
	        android:layout_marginLeft="@dimen/setting_item_padding"
	         />
         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
            	android:padding="5dip"
	            android:layout_margin="@dimen/setting_item_padding"
	            android:textSize="18dip"
	             
	            android:text="关于图知"/>
            
            <ImageView 
		            android:id="@+id/iv_about"
		            android:layout_width="40dip"
		            android:layout_height="40dip"
				    android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:padding="10dip"
		            android:layout_marginRight="10dip"
		            android:src="@drawable/ic_gointo_blue_small"
		            />
        </RelativeLayout>
         </LinearLayout>
         
         <Button 
             android:id="@+id/bt_login"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#ffffff"
             android:textColor="#ff0000"
             android:textSize="20dip"
              
             android:text="退出登录"/>
        
         <ImageButton 
	   	    android:id="@+id/ibt_back"
	   	    android:layout_width="60dip"
	   	    android:layout_height="60dip"
	   	    android:layout_margin="@dimen/setting_item_padding"
	   	    android:background="@drawable/ic_keyboard_arrow_up_blue_48dp"
	   	    android:layout_gravity="center_horizontal"/>
    </LinearLayout>
	</ScrollView>
</RelativeLayout>
