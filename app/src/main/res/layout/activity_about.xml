<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:background="@color/background_white"
        android:id="@+id/toplayout">
       	
       	<ImageButton 
	   	    android:id="@+id/ibt_back"
	   	    android:layout_width="40dip"
	   	    android:layout_height="40dip"
	   	    android:background="@drawable/ic_keyboard_arrow_left_black_48dp"
	   	    android:layout_alignParentLeft="true"/>
       	
       	<TextView
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
			android:layout_centerInParent="true"
       	    android:textSize="24dip"
       	    android:text="关于图知"
       	    android:textColor="@color/button_blue" />
      
    </RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:id="@+id/view"
        android:layout_below="@+id/toplayout"
        android:background="@color/top_line"/>
	<ImageView
	    android:id="@+id/iv_logo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/toplayout"
	    android:src="@drawable/ic_logo"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dip"
	    android:layout_marginLeft="50dip"
	    android:layout_marginRight="50dip"
	    android:scaleType="centerInside"/>
	<TextView 
	    android:id="@+id/tv_version"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/iv_logo"
	    android:textSize="20dip"
	    android:layout_margin="10dip"
	    android:text="图知  v1.0"/>
	
	<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tv_version"
	        android:layout_marginBottom="@dimen/setting_item_margin"
	        android:background="#ffffff"
            >
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_margin="@dimen/setting_item_margin"
		            android:textSize="18dip"
		            android:textStyle="bold"
		            android:text="检查更新"/>
	            <TextView 
		            android:id="@+id/tv_update"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:gravity="center"
	            	android:drawableRight="@drawable/ic_gointo_blue_small"
		            android:textSize="16dip"
		            android:padding="@dimen/setting_item_margin"
		            android:text="已是最新版本"/>
	        </RelativeLayout>
	        <View  
		        android:layout_width="fill_parent"  
		        android:layout_height="1dip"  
		        android:background="#c8c8cd" 
		        android:layout_marginLeft="@dimen/setting_item_margin"
		        android:layout_marginRight="@dimen/setting_item_margin" />
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_margin="@dimen/setting_item_margin"
		            android:textSize="18dip"
		            android:textStyle="bold"
		            android:text="功能介绍"/>
	            <TextView
		            android:id="@+id/tv_intro"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:padding="20dip"
		            android:gravity="center"
	            	android:drawableRight="@drawable/ic_gointo_blue_small"
	            	/>
	        </RelativeLayout>
	        <View  
		        android:layout_width="fill_parent"  
		        android:layout_height="1dip"  
		        android:background="#c8c8cd" 
		        android:layout_marginLeft="@dimen/setting_item_margin"
		        android:layout_marginRight="@dimen/setting_item_margin"  />
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_margin="@dimen/setting_item_margin"
		            android:textSize="18dip"
		            android:textStyle="bold"
		            android:text="意见反馈"/>
	            <TextView 
		            android:id="@+id/tv_suggest"
		            android:layout_width="50dip"
		            android:layout_height="50dip"
				    android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:padding="20dip"
		            android:gravity="center"
	            	android:drawableRight="@drawable/ic_gointo_blue_small"
		            />
	        </RelativeLayout>
       </LinearLayout>
	
	
</RelativeLayout>
